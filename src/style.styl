#app
  width 1024px
  height 768px
  margin auto
#top
  width 100%
  height 65px
#content
    width 100%
    height calc(768px - 65px - 20px)
#left
    width 215px
    height 100%
    float left
#right
    width 770px
    height 100%
    float right
#menu
  width 100%
  height calc(100% - 25px)

  #club
    font-family '標楷體'
    font-weight 500
    font-size 24px
    text-decoration underline
    text-align center
    color #ff00ff  
.item
    width 200px
    height 35px
    margin 3px
    color black
    font-size 16px
    text-align center
    line-height: 35px
    background-size cover
    background-position center
    // 在 Vue 的 CSS 裡面只能引用 src 的圖片
    // 必須要加 ~@ 才可以指向到 src 資料夾 
    background-image url('~@/assets/menu1.png')

.item:hover
    background-image url('~@/assets/menu2.png')   

#Update
  width 100%
  height 25px
  text-align center
  font-family '標楷體'
  color black
  font-size 16px

#mar
  font-size 24px
  font-family '標楷體'
  color blue
  width 100%
  height 29px


#main
  width 100%
  height calc(100% - 29px)
  text-align center
  font-size 24px
  font-family '標楷體'
  font-weight bold
  font-style italic
  color blue

#footer
  clear both  
  font-family "標楷體"
  font-size 16px
  text-align center
  width 100%
  height 20px


